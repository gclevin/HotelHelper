extends base.pug
block content
  h1 Available Hotels from #{start} to #{end}

  each hotel in hotels
        .media-body
          h2= hotel.name
          h4= hotel.address
          h4= hotel.city + ", " + hotel.state + " " + hotel.zip
          form(action='makeReservation' method="POST")
            .form-group
              label(for="hotel")
              input.form-control(type="hidden", name="hotel", id="hotel", value=hotel.id, required)
            .form-group 
              label(for="start")
              input.form-control(type="hidden", name="start", id="hotel", value=start, required)
            .form-group
              label(for="end")
              input.form-control(type="hidden", name="end", id="end", value=end, required)
            .form-group
              label(for="name")
              input.form-control(type="hidden", name="name", id="name", value=hotel.name, required)
            .form-group
            button.btn.btn-primary(type="submit") Book

  if !hotels.length
    h2 No available hotels on those dates.

